{
  "buildCommand": "rm -rf .next && npm run build",
  "git": {
    "deploymentEnabled": {
      "master": true
    }
  },
  "github": {
    "autoDeployment": true,
    "silent": false
  },
  "crons": [
    {
      "path": "/api/automation/check",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/automation/post-latest",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/meta/refresh-tokens",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/automation/rotate-tokens",
      "schedule": "0 0 * * *"
    }
  ]
}