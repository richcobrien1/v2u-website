# ============================================================================
# V2U Website Environment Variables
# ============================================================================
# Copy this file to .env.local for development
# Add these to Vercel Dashboard for production deployment
#
# IMPORTANT: Never commit .env.local to git - it's already in .gitignore
# ============================================================================

# ----------------------------------------------------------------------------
# Cloudflare R2 Storage Configuration
# ----------------------------------------------------------------------------
# Get from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY=your_r2_access_key_here
R2_SECRET_KEY=your_r2_secret_key_here

# R2 Bucket Names
R2_BUCKET=ai-now-episodes
R2_BUCKET_PUBLIC=public-assets
R2_BUCKET_PRIVATE=premium-content

# R2 CDN/Public URL
R2_PUBLIC_URL=https://cdn.v2u.us

# ----------------------------------------------------------------------------
# Cloudflare KV Storage (for subscriber management)
# ----------------------------------------------------------------------------
# Get from: Cloudflare Dashboard > Workers & Pages > KV
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ----------------------------------------------------------------------------
# Stripe Payment Integration
# ----------------------------------------------------------------------------
# Get from: Stripe Dashboard > Developers > API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product/Price IDs
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# ----------------------------------------------------------------------------
# JWT & Session Management (Legacy - being replaced by Clerk)
# ----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
SESSION_SECRET=your_super_secret_session_key_min_32_characters

# ----------------------------------------------------------------------------
# Clerk Authentication (Multi-Tenant SSO)
# ----------------------------------------------------------------------------
# Get from: https://dashboard.clerk.com
# 1. Create application in Clerk Dashboard
# 2. Copy API keys from: API Keys section
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs - customize for your domain
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Clerk Webhook (for syncing user data)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# ----------------------------------------------------------------------------
# Social Media APIs - Twitter/X
# ----------------------------------------------------------------------------
# Get from: https://developer.twitter.com/en/portal/dashboard
# OAuth 2.0 Credentials (for posting via website)
TWITTER_API_KEY=your_twitter_client_id_here
TWITTER_API_SECRET=your_twitter_client_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Twitter Callback URL (must match in Twitter Developer Portal)
TWITTER_CALLBACK_URL=https://www.v2u.us/api/social-auth/twitter/callback

# ----------------------------------------------------------------------------
# Social Media APIs - LinkedIn
# ----------------------------------------------------------------------------
# Get from: https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_PERSON_URN=urn:li:person:your_person_id_here

# LinkedIn Callback URL
LINKEDIN_CALLBACK_URL=https://www.v2u.us/api/social-auth/linkedin/callback

# ----------------------------------------------------------------------------
# Social Media APIs - Facebook
# ----------------------------------------------------------------------------
# Get from: https://developers.facebook.com/
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ----------------------------------------------------------------------------
# Social Media APIs - Threads (Meta)
# ----------------------------------------------------------------------------
THREADS_ACCESS_TOKEN=your_threads_access_token_here
THREADS_USER_ID=your_threads_user_id_here

# ----------------------------------------------------------------------------
# OpenAI API (for AI content generation)
# ----------------------------------------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ----------------------------------------------------------------------------
# Email Service (Optional)
# ----------------------------------------------------------------------------
# For transactional emails, password resets, etc.
EMAIL_FROM=noreply@v2u.us
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Or use service like SendGrid, Resend, etc.
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ----------------------------------------------------------------------------
# Admin Configuration
# ----------------------------------------------------------------------------
# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@v2u.us,support@v2u.us

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Production URL
NEXT_PUBLIC_APP_URL=https://www.v2u.us

# Environment
NODE_ENV=production

# Enable/Disable Features
ENABLE_SOCIAL_POSTING=true
ENABLE_AI_AUTOMATION=true
NO_MOCKS=true

# ----------------------------------------------------------------------------
# Development Only
# ----------------------------------------------------------------------------
# Set to 'true' in development to skip certain checks
SKIP_ENV_VALIDATION=false

# Debug logging
DEBUG_MODE=false

# ----------------------------------------------------------------------------
# Cron/Automation Settings
# ----------------------------------------------------------------------------
# Timezone for scheduled tasks
TZ=America/New_York

# AI News automation schedule (cron format)
AI_NEWS_CRON_SCHEDULE=0 9 * * *

# ----------------------------------------------------------------------------
# Analytics (Optional)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_GA_ID=G-your_google_analytics_id
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=v2u.us

# ----------------------------------------------------------------------------
# Error Tracking (Optional)
# ----------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# ============================================================================
# End of Configuration
# ============================================================================
